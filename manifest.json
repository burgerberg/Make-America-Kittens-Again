{
  "manifest_version": 2,

  "name": "Pixa o Doria",
  "description": "descrição",
  "version": "1.2.1",

  "permissions": [
    "storage",
    "contextMenus"
  ],
  "icons": { "48": "pixodoria48.png",
          "128": "pixodoria128.png" },
  "browser_action": {
          "default_icon": { 
	           "48": "pixodoria48.png",
			   "128": "pixodoria128.png" 
          },
          "default_title": "#Pixa o Doria"      
        },
  "background": {
    "scripts": ["pixodoriamenu.js"]
  },
          
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["pixodoria.js"]
    }
  ],
  "web_accessible_resources": [
    "pixos/*.jpg"
  ]
}
